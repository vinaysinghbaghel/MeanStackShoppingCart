<%- include('partials/header') %>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12" style="padding-left:30px;opacity:100%;color:white;border-bottom:2px solid white;">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-6">
						<h3>U-stora Store</h3>
					</div>
					<div class="col-sm-6">
						<h3>A Trending Shopping Cart</h3>
					</div>	
				</div>
			</div>
		</div>
		<div class="col-sm-12" style="padding-top:20px;">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-6" style="color:white;text-align:center;">
						<h2>Registration Form</h2>
						<span><img src="shopping-cart-icon.png"></img</span>
					</div>
					<div class="col-sm-6" style="color:white;">
						<% if(locals.error) {%>
							<div class="alert alert-danger"><%= error%></div>
						<%}%>	 
						<form method="post">
							<div class="form-group">
								<label for="firstname">First Name :</label>
								<input type="text" id="firstname" name="firstname" style="background-color:#101010;color:#fff;" class="form-control" value="<%= locals.firstname || ''%>" required>
							</div>
							<div class="form-group">
								<label for="lastname">Last Name :</label>
								<input type="text" id="lastname" name="lastname" style="background-color:#101010;color:#fff;"  class="form-control" value="<%= locals.lastname || ''%>" required>
							</div>
							<div class="form-group">
								<label for="username">User Name :</label>
								<input type="text" id="username" name="username" style="background-color:#101010;color:#fff;" class="form-control" value="<%= locals.username || ''%>" required>
							</div>
							<div class="form-group">
								<label for="email">Email ID :</label>
								<input type="email" id="email" name="email" style="background-color:#101010;color:#fff;" class="form-control" value="<%= locals.email || ''%>" required>
							</div>
							<div class="form-group">
								<label for="mobile">Mobile Number :</label>
								<input type="text" id="mobile" name="mobile" style="background-color:#101010;color:#fff;" class="form-control" value="<%= locals.mobile || ''%>" required>
							</div>
							<div class="form-group">
								<label for="address">Address</label>
								<input type="text" id="address" name="address" style="background-color:#101010;color:#fff;" class="form-control" value="<%= locals.address || ''%>" required>
							</div>
							<div class="form-group">
            					<label for="password">Password :</label>
            					<input type="password" name="password" id="password" style="background-color:#101010;color:#fff;"  class="form-control" required />
        					</div>
        					<div class="form-group">
            					<button type="submit" class="btn btn-primary">Register</button>
            					<a href="/login" class="btn btn-danger">Cancel</a>
        					</div>
						</form>
					</div>
				</div>
			</div>	
		</div>
	</div>
</div>
